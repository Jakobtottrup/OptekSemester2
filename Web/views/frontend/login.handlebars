<link rel="stylesheet" type="text/css" href="/css/specific/spec-login.css">

<h1>Login</h1>
<hr>
<br>
<br>
<form id="loginform" class="form-horizontal" role="form" method="post" action="/login">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="Brugernavn" autofocus>
    </div>
    <br>
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <input id="login-password" type="password" class="form-control" name="password" placeholder="Kodeord">
    </div>
    <br>
    <a id="reset_link" class="pull-right" href="/passwordreset">Glemt kodeord?</a>
    <div class="clearfix"></div>
    <hr>
    <input type="submit" name="submit" value="Login" class="btn btn-success btn-lg pull-left">
</form>
<button id="whatever" onclick="window.location='/signup'" class="btn btn-primary btn-lg pull-right">Opret bruger</button>

