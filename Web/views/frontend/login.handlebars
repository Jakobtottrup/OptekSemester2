<h1>Login</h1>
<hr>

<form id="loginform" class="form-horizontal" role="form" method="post" action="/login">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="Brugernavn" autofocus>
    </div>
    <br>
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <input id="login-password" type="password" class="form-control" name="password" placeholder="Kodeord">
    </div>
    <hr>
    <input type="submit" name="submit" value="Login" class="btn btn-primary btn-lg">
</form>
<div>
    <a href="/passwordreset">Glemt kodeord?</a>
</div>
