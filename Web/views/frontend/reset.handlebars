<h1>Opret nyt password</h1>

<form id="resetForm" class="form-horizontal" role="form" method="post" action="/reset/">
    <div class="form-group">
        <label for="password">New password</label>
        <input id="password" type="password" class="form-control" name="password" value="" placeholder="New Password"
               autofocus>
    </div>
    <div class="form-group">
        <label for="confirm">New password</label>
        <input id="confirm" type="password" class="form-control" name="confirm" value="" placeholder="Confirm Password"
               autofocus>
    </div>

    <div class="form-group">
        <input type="submit" name="submit" value="Update password" class="btn btn-primary btn-lg" id="submitBtn">
    </div>
</form>

<script>

    function updatePassword(token) {
        $.ajax({
            type: 'POST',
            url: '/reset/' + token,
            dataType: 'json',
            data: {password: $('#password').val()}
        }).done(function (user) {
            userData = user;
        });
    }
    var token = window.location.pathname.slice(7);
    document.getElementById('submitBtn').onclick = function (e) {
        e.preventDefault();
        updatePassword(token);
    };
</script>



